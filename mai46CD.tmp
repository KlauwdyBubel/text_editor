			file_name_label.text = \"untitled\"
			file_name_label.label_settings.font_color = Color.from_hsv(0, 0, .5)
		else:
			file_name_label.text = \"untitled\"
			file_name_label.label_settings.font_color = Color.from_hsv(0, 0, 1)
		current_file_name = new_file_name


